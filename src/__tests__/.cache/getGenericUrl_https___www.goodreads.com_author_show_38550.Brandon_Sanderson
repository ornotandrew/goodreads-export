              .bind('ajax:beforeSend', function() {
                  $j('#write_in_loading_poll_132563').show();
                  $j('#write_in_submit_poll_132563').hide();
              })
              .bind('ajax:error', function(request) {
                  alert(request.responseText);
              })
              .bind('ajax:success', function() {
                  $j('#write_in_loading_poll_132563').hide();
                  $j('#write_in_submit_poll_132563').show();
              });
  });
//]]>
</script>


